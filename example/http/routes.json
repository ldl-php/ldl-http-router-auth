{
  "routes": [
    {
      "version": "1.0",
      "url": {
        "prefix": "login"
      },
      "request": {
        "method": "get"
      },
      "auth": {
        "procedure": "ldl.auth.http.basic.auth",
        "verifier": "ldl.auth.false.verifier",
        "token": {
          "generator": "ldl.auth.token.pdo.generator",
          "options": {
            "expires": "+ 1 day"
          }
        }
      },
      "name": "test",
      "description": "A test route",
      "dispatcher": "http.dispatcher"
    }
  ]
}