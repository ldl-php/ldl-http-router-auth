{
  "routes": [
    {
      "name": "Login",
      "description": "Login endpoint",
      "version": "1.0",
      "url": {
        "prefix": "index"
      },
      "request": {
        "method": "get"
      },
      "dispatcher": {
        "class": "Dispatcher"
      },
      "response": {
        "parser": "ldl.response.parser.template",
        "template": {
          "engine": "template.engine.php",
          "codes": {
            "200-299": {
              "file": "login.php"
            }
          }
        }
      }
    },
    {
      "name": "Login Verification",
      "description": "Verifies facebook token",
      "version": "1.0",
      "url": {
        "prefix": "verify"
      },
      "request": {
        "method": "get"
      },
      "dispatcher": {
        "class": "LoginSuccess"
      },
      "auth": {
        "procedure": "facebook.oauth2",
        "verifier": "verifier.false",
        "token": {
          "generator": {
            "namespace": "LDLAuthPlugin",
            "name": "LDLTokenPDOGenerator"
          }
        }
      },
      "response": {
        "parser": "ldl.response.parser.template",
        "template": {
          "engine": "template.engine.php",
          "codes": {
            "200-299": {
              "file": "success.php"
            }
          }
        }
      }
    }
  ]
}