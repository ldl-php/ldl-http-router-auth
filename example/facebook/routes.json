{
  "routes": [
    {
      "name": "Login",
      "description": "Login endpoint",
      "version": "1.0",
      "url": {
        "prefix": "facebook"
      },
      "request": {
        "method": "get"
      },
      "dispatcher": "dispatcher",
      "response": {
        "parser": "ldl.response.parser.template",
        "template": {
          "engine": "template.engine.php",
          "codes": {
            "200-299": {
              "file": "login.php"
            }
          }
        }
      }
    },
    {
      "name": "Login Verification",
      "description": "Verifies facebook token",
      "version": "1.0",
      "url": {
        "prefix": "dialog/oauth"
      },
      "request": {
        "method": "get"
      },
      "dispatcher": "login.success.dispatcher",
      "auth": {
        "procedure": "facebook.oauth2",
        "verifier": "facebook.verifier",
        "token": {
          "generator": "ldl.auth.token.pdo.generator"
        }
      },
      "response": {
        "parser": "ldl.response.parser.template",
        "template": {
          "engine": "template.engine.php",
          "codes": {
            "200-299": {
              "file": "success.php"
            }
          }
        }
      }
    }
  ]
}